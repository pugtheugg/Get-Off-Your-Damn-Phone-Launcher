<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground">

    <!-- Title Bar -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/arrow_back"
            android:contentDescription="Back"
            app:tint="@color/colorPrimary"
            android:layout_marginStart="30dp"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Launcher Settings"
            android:padding="12dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:gravity="center"/>
    </RelativeLayout>

    <View
        android:id="@+id/view_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/toggleEditColors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:padding="10dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="Edit Colors"/>

    <LinearLayout
        android:id="@+id/collapsibleEditColorsContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/color_primary_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:padding="10dp"
            android:textSize="30sp"
            android:textStyle="italic"
            android:text="Primary Color"/>

        <TextView
            android:id="@+id/color_background_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:padding="10dp"
            android:textSize="30sp"
            android:textStyle="italic"
            android:text="Background Color"/>
    </LinearLayout>

    <TextView
        android:id="@+id/toggleThemes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:padding="10dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="Select Theme"/>

    <GridLayout
        android:id="@+id/themeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:padding="8dp"
        android:useDefaultMargins="true"
        android:visibility="gone">

        <Button
            android:id="@+id/hellThemeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Hell"
            android:background="@null"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorBackground"
            android:textSize="15sp" />

        <Button
            android:id="@+id/forestThemeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Forest"
            android:background="@null"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorBackground"
            android:textSize="15sp" />

        <Button
            android:id="@+id/draculaThemeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Dracula"
            android:background="@null"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorBackground"
            android:textSize="15sp" />

        <Button
            android:id="@+id/heavenThemeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Heaven"
            android:background="@null"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorBackground"
            android:textSize="15sp" />

        <Button
            android:id="@+id/ikeaThemeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="AEKI"
            android:background="@null"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorBackground"
            android:textSize="15sp" />

        <Button
            android:id="@+id/berryThemeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:text="Berry"
            android:background="@null"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@color/colorBackground"
            android:textSize="15sp" />
    </GridLayout>

</LinearLayout>
